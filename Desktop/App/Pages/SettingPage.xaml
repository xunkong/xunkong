                    <!--  主页功能  -->
                    <labs:SettingsExpander Description="主页内的相关设置在这里" Header="主页功能">
                        <labs:SettingsExpander.HeaderIcon>
                            <FontIcon FontSize="20" Glyph="&#xE10F;" />
                        </labs:SettingsExpander.HeaderIcon>
                        <labs:SettingsExpander.Items>
                            <!--  实时便笺  -->
                            <labs:SettingsCard Description="同时对所有账号生效" Header="实时便笺">
