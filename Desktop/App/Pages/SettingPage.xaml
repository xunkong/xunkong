                                <ToggleSwitch IsOn="{x:Bind AlwaysActiveBackdrop, Mode=TwoWay}" Style="{ThemeResource RightAlignToggleSwitchStyle}" />
                            </labs:SettingsCard>
                        </labs:SettingsExpander.Items>
                    </labs:SettingsExpander>


